{
  "openapi": "3.0.0",
  "info": {
    "title": "Investment API",
    "description": "API documentation for Investment-related data",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/index": {
      "get": {
        "summary": "Get Index Data",
        "description": "Returns stock index data.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IndexDataResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ranking": {
      "get": {
        "summary": "Get Real-Time Ranking",
        "description": "Returns real-time ranking of stocks based on transaction value.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RealTimeRankingResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/investment-products": {
      "get": {
        "summary": "Search Investment Products",
        "description": "Returns a list of investment products with relevant information.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SearchInvestmentProductsResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "IndexDataResponse": {
        "type": "object",
        "properties": {
          "stockName": {
            "type": "string",
            "description": "종목명",
            "example": "Sample Stock"
          },
          "baseDate": {
            "type": "string",
            "description": "기준일자",
            "example": "2024-08-22"
          },
          "fluctuationRate": {
            "type": "number",
            "format": "double",
            "description": "등락률",
            "example": 1.23
          }
        }
      },
      "RealTimeRankingResponse": {
        "type": "object",
        "properties": {
          "transactionValue": {
            "type": "integer",
            "format": "int64",
            "description": "거래 대금",
            "example": 1000000
          },
          "comparedToPrice": {
            "type": "number",
            "format": "double",
            "description": "종가 대비",
            "example": 2.34
          },
          "stockName": {
            "type": "string",
            "description": "종목명",
            "example": "Sample Stock"
          }
        }
      },
      "SearchInvestmentProductsResponse": {
        "type": "object",
        "properties": {
          "stockName": {
            "type": "string",
            "description": "종목명",
            "example": "Sample Stock"
          },
          "marketClassification": {
            "type": "string",
            "description": "시장 구분",
            "example": "KOSPI"
          },
          "marketCapitalization": {
            "type": "integer",
            "format": "int64",
            "description": "시가 총액",
            "example": 5000000000
          },
          "fluctuationRate": {
            "type": "number",
            "format": "double",
            "description": "등락률",
            "example": 3.45
          }
        }
      }
    }
  }
}
